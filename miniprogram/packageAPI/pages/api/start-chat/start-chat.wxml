<import src="../../../../common/head.wxml" />
<import src="../../../../common/foot.wxml" />
<import src="../../../../common/foot_en.wxml" />
<view class="container page">
  <template is="head" data="{{title: 'Start Chat'}}" />
  <view class="page-body">
    <view class="page-section">
      <view class="weui-cells__title">{{t['Friend OpenId']}}</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" bindinput="bindOpenIdInput" focus placeholder="{{friendOpenId}}" />
        </view>
      </view>
    </view>
    <button type="primary" bindtap="startChat">{{t['Send Message']}}</button>
  </view>
</view>